<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/navigate_back"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/spl2"
            android:paddingBottom="50dp"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="@drawable/shap_roundrec"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_lable_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称:"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        />

                    <TextView
                        android:id="@+id/tv_otherpersondetail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textColor="@color/white"
                        android:layout_alignBottom="@id/tv_lable_name"
                        android:layout_toRightOf="@id/tv_lable_name"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:ellipsize="end"
                        />

                    <View
                        android:id="@+id/view1"
                        android:layout_below="@id/tv_otherpersondetail_name"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/divider_blue"
                        />

                    <TextView
                        android:id="@+id/lb_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个性签名:"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@id/view1"
                        />


                    <TextView
                        android:id="@+id/tv_otherpersondetail_sign"
                        android:layout_below="@id/lb_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快乐与好友分享精彩瞬间"
                        android:textColor="@color/white"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="25dp"

                        />
                </RelativeLayout>
                
                <notrace.daytongue.views.CircleImageView
                    android:id="@+id/civ_otherpersondetail_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_touxiang"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    />
                
                
                
            </RelativeLayout>



            <TextView
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本信息"
                android:textColor="@color/white"
                />


            <LinearLayout
                android:background="@drawable/shap_roundrec"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="真实姓名"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:id="@+id/tv_otherpersondetail_realname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textColor="@color/white"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:background="@color/divider_blue"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/tv_otherpersondetail_sex"
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:background="@color/divider_blue"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生日"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/tv_otherpersondetail_birthday"
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2015-1-1"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社交信息"
                android:textColor="@color/white"
                />


            <LinearLayout
                android:background="@drawable/shap_roundrec"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="从事行业"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:id="@+id/tv_otherpersondetail_profession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textColor="@color/white"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:background="@color/divider_blue"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所在城市"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/tv_otherpersondetail_city"
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:background="@color/divider_blue"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个性标签"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/tv_otherpersondetail_style"
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2015-1-1"
                        android:textColor="@color/white"
                        />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:background="@color/divider_blue"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号码"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/tv_otherpersondetail_mobile"
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="131********6"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>
