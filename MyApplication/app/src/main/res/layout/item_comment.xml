<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingBottom="10dp"
    >

    <notrace.daytongue.views.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/icon_touxiang"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:id="@+id/civ_item_comment_head"
        />


    <TextView
        android:text="name"
        android:id="@+id/tv_item_comment_name"
        android:layout_toRightOf="@id/civ_item_comment_head"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView

        android:text="2015-1-1"
        android:id="@+id/tv_item_comment_time"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/tv_item_comment_name"
        android:layout_below="@id/tv_item_comment_name"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content" />
    <emojicon.EmojiconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="comment"
        android:id="@+id/tv_item_comment_comment"
        android:layout_alignLeft="@id/tv_item_comment_time"
        android:layout_below="@id/tv_item_comment_time"
        android:layout_marginTop="5dp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:text="删除"

        />


</RelativeLayout>