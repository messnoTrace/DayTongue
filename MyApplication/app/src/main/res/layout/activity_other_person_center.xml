<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <include layout="@layout/navigate_back"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/spl2"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rl_otherpersoncenter_midle"
            android:layout_marginTop="55dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:background="@drawable/shap_roundrec"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_otherpersoncenter_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nick"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                />
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_blue"
                android:layout_below="@id/tv_otherpersoncenter_nickname"
                ></View>



            <TextView
                android:id="@+id/tv_lable_sign"
                android:text="个性签名"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_below="@id/view1"
                />

            <TextView
                android:id="@+id/tv_otherpersoncenter_sign"
                android:layout_below="@id/tv_lable_sign"
                android:layout_width="wrap_content"
                android:text="sign"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_blue"
                android:id="@+id/view2"
                android:layout_below="@id/tv_otherpersoncenter_sign"
                android:layout_marginTop="10dp"
                />


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_below="@id/view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ll_otherpersoncenter_focus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_otherpersoncenter_focus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textColor="@color/white"
                        android:text="0"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="关注"
                        android:padding="3dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_otherpersoncenter_fans"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_otherpersoncenter_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="3dp"
                        android:textColor="@color/white"
                        android:text="0"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="粉丝"
                        android:padding="3dp"
                       />

                </LinearLayout>


                <LinearLayout

                    android:id="@+id/ll_otherpersoncenter_pics"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:id="@+id/tv_otherpersoncenter_pics"
                        android:padding="3dp"
                        android:textColor="@color/white"
                        android:text="0"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="图片"
                        android:padding="3dp"
                        />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <notrace.daytongue.views.CircleImageView
            android:id="@+id/civ_otherpersoncenter_head"
            android:layout_marginTop="25dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_touxiang"
            />



        <LinearLayout
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="25dp"
            android:layout_below="@id/rl_otherpersoncenter_midle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shap_roundrec"
            >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/fl_otherpersoncenter_space"
                android:layout_height="wrap_content">
            <TextView
                android:drawableLeft="@drawable/icon_search"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:ellipsize="middle"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="他的每日舌尖"
                />

            </FrameLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider_blue"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/fl_otherpersoncenter_moreinfo"
                android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:drawableLeft="@drawable/icon_search"
                android:layout_width="wrap_content"
                android:ellipsize="middle"
                android:layout_gravity="center"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="更多资料"
                />
            </FrameLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
